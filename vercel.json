{
  "rewrites": [
    { "source": "/", "destination": "/clock-in/index.html" },
    { "source": "/index.html", "destination": "/clock-in/index.html" }
  ],
  "headers": [
    {
      "source": "/clock-in/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    },
    {
      "source": "/clock-in/og-image.png",
      "headers": [
        { "key": "Content-Type", "value": "image/png" },
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
